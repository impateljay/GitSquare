<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_width="2dp"
        android:src="@drawable/image"
        app:civ_border_color="#FF000000"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@+id/avatar_image"
        android:id="@+id/txt_login_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="25sp" />

    <TextView
        android:text="@string/contributed_repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login_name"
        android:layout_toEndOf="@+id/avatar_image"
        android:id="@+id/txt_contributed_repos"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_image"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:id="@+id/txt_contributions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true" />

</RelativeLayout>